  "11种结构框架": {
    "结构1_痛点+解决方案型": {
      "说明": "经典带货结构，先戳痛点再给方案",
      "适用场景": "送礼、避坑、建立信任",
      "强制写作模板": {
        "段落要求": {
          "段落1_痛点描述": {
            "字数": "30-40字",
            "要求": "🔴 必须聚焦'中高端痛点'：如社交尴尬（送礼被识破）、品质倒挂（高价买劣茶）、香精担忧。禁止写'碎茶/茶梗'等低端痛点。"
          },
          "段落2_解决方案": {
            "字数": "50-60字",
            "要求": "引出产品，强调'正宗'、'源头'或'非遗'，解决上述焦虑。"
          },
          "段落3_产品优势": {
            "字数": "40-50字",
            "要求": "用五感描写（香气/口感）验证品质，必须使用场景库中的变体。"
          },
          "段落4_信任证据": {
            "字数": "30-40字",
            "要求": "用数据或背书（如检测报告/传承人）夯实信任。"
          },
          "段落5_行动号召": {
            "字数": "15-25字",
            "要求": "价值升华式引导，如'懂茶的人都囤了'。"
          }
        },
        "总字数": "160-200字",
        "过渡要求": "段落1到2必须用转折词（其实、幸好、直到遇到了）；段落3到4必须用因果过渡（能有这个口感，全靠...）。"
      }
    },
